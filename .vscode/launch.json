"version": "0.2.0",
"configurations": [


  {
    "name": "Electron: Main",
    "type": "node",
    "request": "launch",
    "cwd": "${workspaceFolder}",
    "runtimeExecutable": "/usr/bin/electron",
    "runtimeArgs": [
      "--disable-gpu",
      "--remote-debugging-port=9223",
      "."
    ],
    "windows": {
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
    },
   /*  "args" : [
      "--remote-debugging-port=9223",
      "."
    ], */
    "outputCapture": "std"
  },
  {
      "name": "Electron: Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000,
  }
],
"compounds": [
  {
      "name": "Electron: All",
      "configurations": [
          "Electron: Main",
          "Electron: Renderer"
      ]
  }
]
}